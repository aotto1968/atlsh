test exec-4.5 {redirecting output and stderr to file} {exec} {
    set f [open "$path(gorpExec.file)" w]
    puts $f "Line 1"
    flush $f
    exec >&@ $f [interpreter] "$path(shExec)" -c "\"$path(echoExec)\" foo bar 1>&2"
