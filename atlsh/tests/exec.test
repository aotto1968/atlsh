    exec [interpreter] $path(echoExec) "first line" > $path(gorpExec.file)
    list [exec [interpreter] "$path(shExec)" -c "\"$path(echoExec)\" foo bar 1>&2" >>&$path(gorpExec.file)] \
	    [exec [interpreter] "$path(catExec)" "$path(gorpExec.file)"]
